MEMORY
{
    rom(rx)   : ORIGIN = 0x0,       LENGTH = 0x8000
    ram_a(rw) : ORIGIN = 0x1000000, LENGTH = 0x2000
    ram_b(rw) : ORIGIN = 0x1800000, LENGTH = 0x2000
}
SECTIONS
{
    .boot : { *(.boot) 
        KEEP (*(.boot)) 
    } > rom
    .vectors 0x40 : {
        KEEP (*(.vectors))
    } > rom
    .srodata : { *(.srodata*) } > rom
    .isrs : { *(.isrs*)
        KEEP (*(.isrs))
    } > rom
    .text : { *(.text*) } > rom
    .rodata : { *(.rodata*) } > rom

    .scratch : {
        . += 0x300;
    } > ram_a

    .data : { 
        . = ALIGN(4);
        __data_start__ = .;
        *(.sdata*) *(.data*) 
        . = ALIGN(4);
        __data_end__ = .;
    } > ram_a AT> rom
    __etext = LOADADDR(.data);

    .bss : { 
        . = ALIGN(4);
        __bss_start__ = .;
        *(.sbss*) *(.bss*)
        . = ALIGN(4);
        __bss_end__ = .;
    } > ram_a

    .heap (NOLOAD):
    {
        __HeapStart = .;
        KEEP(*(.heap*))
        __HeapLimit = .;
    } > ram_b

    __global_pointer$ = 0x1000400;
    __StackTop = ORIGIN(ram_a) + LENGTH(ram_a);
    __StackLimit = __StackTop - 0x1000;
    ASSERT(__StackLimit >= __bss_end__, "region RAM overflowed")
}
